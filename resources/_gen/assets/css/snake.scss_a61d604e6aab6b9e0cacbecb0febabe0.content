.snake-container{position:fixed;bottom:0;left:0;width:100%;height:1.5em;overflow:hidden;pointer-events:none;opacity:0;z-index:9999;font-family:monospace;color:var(--accent, #eec35e)}.snake-container.animate{animation:fadeIn 0.5s forwards}@keyframes fadeIn{to{opacity:1}}.snake{position:absolute;bottom:0;white-space:pre;animation:crawl 15s linear infinite}@keyframes crawl{0%{transform:translateX(-100%)}100%{transform:translateX(100vw)}}@media (prefers-reduced-motion: reduce){.snake-container,.snake{animation:none !important;display:none !important}}
